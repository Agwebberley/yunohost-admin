#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

#Â Get package version
# dpkg-parsechangelog > 1.17 could use dpkg-parsechangelog --show-field Version
DEBVERS := $(shell dpkg-parsechangelog | sed -n -e 's/^Version: //p')

# Define temporary debian directory
TMPDIR = $$(pwd)/debian/yunohost-admin

%:
	dh  $@

override_dh_auto_build:
	/usr/bin/npm install -g npm@6
	cd app ; PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin /usr/local/bin/npm ci --production --progress false
	cd app ; PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin /usr/local/bin/npm run build --production


override_dh_clean:
	dh_clean
	rm -rf app/node_modules
	rm -rf app/dist
